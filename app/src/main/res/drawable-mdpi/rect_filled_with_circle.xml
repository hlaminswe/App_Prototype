<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Larger blue circle in back -->
    <item >
        <shape android:innerRadius="2dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"  >

            <solid
                android:color="@color/bg_screen3" >
            </solid>

            <stroke
                android:width="2dp"
                android:color="@color/light_gray_bar" >
            </stroke>
            <corners android:radius="2dp" ></corners>
            <size android:width="100dp" android:height="100dp"></size>
        </shape>
    </item>


    <item android:gravity="center_horizontal|center_vertical"
        android:width="10dp" android:height="10dp">
        <shape android:shape="oval" android:innerRadius="1dp" >
            <corners android:radius="2dp"></corners>
            <solid   android:color="@color/light_green"/>
            <size android:width="20dp" android:height="20dp"></size>
        </shape>
    </item>
</layer-list>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BoardEditTextErrorTextAppearance" parent="@style/TextAppearance.Design.Error">
        <item name="android:textColor">@color/error_text_red</item>
    </style>
    <style name="BoardingDescription">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">6.0sp</item>
    </style>
    <style name="BoardingEditText">
        <item name="android:theme">@style/BoardingEditTextTheme</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:textColorHint">@color/squash</item>
        <item name="android:layout_width">300.0dip</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="BoardingEditTextFloatingLabel">
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:textColor">@color/squash</item>
    </style>
    <style name="BoardingEditTextTheme">
        <item name="android:textColorPrimary">@color/blue_gray</item>
        <item name="colorControlNormal">@color/dark_gray</item>
        <item name="colorControlActivated">@color/squash</item>
    </style>
    <style name="BoardingSkip">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/squash</item>
    </style>
    <style name="BoardingTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="BoardingTitle">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/squash</item>
    </style>
</resources>
